{
    "openapi": "3.0.0",
    "info": {
      "description": "Civil Protection Department and Ministry of Health official COVID19 data in Italy. More info <a target='_blank' href='https://github.com/alessiodl/COVID19Feed2Json'>here</a>",
      "version": "1.0.0",
      "title": "COVID19-API",
      "contact": {
        "email": "alessio.dl@gmail.com"
      },
      "license": {
        "name": "CC BY 4.0",
        "url": "https://creativecommons.org/licenses/by/4.0/deed.it"
      }
    },
    "schemes":["http","https"],
    "produces":["application/json"],
    "paths":{
        "/info":{
            "get":{
                "summary":"General Informations about the API",
                "responses": {
                    "200": {
                      "description": "OK"
                    }
                }
            }
        },
        "/andamento":{
            "get":{
                "summary":"Daily updates about the disease spread",
                "parameters": [{
                    "name": "data",
                    "in": "query",
                    "required": false,
                    "description": "Reference date",
                    "type": "string",
                    "example": "2020-03-08 18:00:00"
                }],
                "responses": {
                    "200": {
                      "description": "OK"
                    }
                }
            }
        },
        "/regioni":{
            "get":{
                "summary":"Daily updates about infection distribution at regional level in GeoJSON Point format",
                "parameters": [{
                    "name": "data",
                    "in": "query",
                    "required": false,
                    "description": "Reference date",
                    "type": "string",
                    "example": "2020-03-08 18:00:00"
                }],
                "responses": {
                    "200": {
                      "description": "OK"
                    }
                }
            }
        },
        "/regioni/map":{
            "get":{
                "summary":"Daily updates about infection distribution at regional level in GeoJSON Polygon format",
                "parameters": [{
                    "name": "data",
                    "in": "query",
                    "required": true,
                    "description": "Reference date",
                    "type": "string",
                    "example": "2020-03-08"
                },{
                    "name": "epsg",
                    "in": "query",
                    "required": false,
                    "description": "EPSG Projection code. Default is 4326",
                    "type": "string",
                    "example": "3857"
                }],
                "responses": {
                    "200": {
                      "description": "OK"
                    }
                }
            }
        },
        "/province":{
            "get":{
                "summary":"Daily updates about infection distribution at provinces level in GeoJSON format",
                "parameters": [{
                    "name": "data",
                    "in": "query",
                    "required": false,
                    "description": "Reference date",
                    "type": "string",
                    "example": "2020-03-08 18:00:00"
                }],
                "responses": {
                    "200": {
                      "description": "OK"
                    }
                }
            }
        }
    }
    
}
